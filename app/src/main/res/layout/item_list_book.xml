<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_list_book_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:textStyle="bold"
            android:padding="5dp" />

        <TextView
            android:id="@+id/textView_list_student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:padding="5dp" />

        <TextView
            android:id="@+id/textView_list_people_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:padding="5dp" />

        <TextView
            android:id="@+id/textView_list_room_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:padding="5dp" />

        <TextView
            android:id="@+id/textView_list_rental_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:padding="5dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대여 시간 : "
            android:textColor="#000000"
            android:layout_margin="1dp"
            android:padding="5dp" />

        <TextView
            android:id="@+id/textView_list_rental_stime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~"
            android:textColor="#000000"
            android:layout_margin="1dp"
            android:padding="5dp" />

        <TextView
            android:id="@+id/textView_list_rental_etime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대여 목적 : "
            android:textColor="#000000"
            android:layout_margin="1dp"
            android:padding="5dp" />

        <TextView
            android:id="@+id/textView_list_perpose_of_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:padding="5dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소 사유 : "
            android:textColor="#000000"
            android:layout_margin="1dp"
            android:padding="5dp" />
        <TextView
            android:id="@+id/textView_list_cancel_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:padding="5dp" />
    </LinearLayout>
</LinearLayout>