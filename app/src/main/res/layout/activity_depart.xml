<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F3F3"
    tools:context="com.example.FLR.DepartActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="80dp">

        <TextView
            android:id="@+id/Dname_text"
            android:layout_width="150dp"
            android:textColor="#011063"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/Dtel1_text"
                android:layout_width="40dp"
                android:textColor="#000000"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="-"
                android:gravity="center_horizontal"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/Dtel2_text"
                android:layout_width="40dp"
                android:textColor="#000000"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="-"
                android:gravity="center_horizontal"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/Dtel3_text"
                android:layout_width="40dp"
                android:textColor="#000000"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                android:layout_margin="10dp"/>

        </LinearLayout>
        <TextView
            android:id="@+id/Droomnum_text"
            android:layout_width="150dp"
            android:textColor="#000000"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/Dstart_text"
            android:layout_width="150dp"
            android:textColor="#000000"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/Dend_text"
            android:layout_width="150dp"
            android:textColor="#000000"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:layout_margin="10dp"/>

    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:text="디버깅"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_main_debug" />

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/textView_main_result"
        android:scrollbars = "vertical"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1.5" />
</LinearLayout>